{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "types": [
      "node",
      "@wdio/globals/types",
      "@wdio/mocha-framework",
      "wdio-vscode-service"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
